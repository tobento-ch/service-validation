{
    "name": "tobento/service-validation",
    "type": "library",
    "description": "Easily validating data.",
    "keywords": [
        "tobento",
        "package",
        "php",
        "validation"
    ],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/service-message": "^1.0",
        "tobento/service-collection": "^1.0",
        "tobento/service-autowire": "^1.0",
        "tobento/service-dater": "^1.0",
        "psr/container": "^2.0",
        "psr/log": "^1.1 || ^2.0 || ^3.0"
    },
    "suggest": {
        "tobento/service-translation": "Support for translating messages"
    },    
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "tobento/service-container": "^1.0",
        "tobento/service-translation": "^1.0",
        "monolog/monolog": "^2.3"
    },    
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Validation\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}
